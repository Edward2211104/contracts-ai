import os
import uvicorn

def main() -> None:
    port = int(os.getenv("LLM_PORT", "8101"))
    host = os.getenv("LLM_HOST", "127.0.0.1")

    uvicorn.run(
        "llm_server:app",
        host=host,
        port=port,
        reload=False,
        log_level="info",
    )


if __name__ == "__main__":
    main()
